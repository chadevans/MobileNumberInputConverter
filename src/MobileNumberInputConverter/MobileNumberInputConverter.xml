<?xml version="1.0" encoding="utf-8" ?>
<widget id="MobileNumberInputConverter.widget.MobileNumberInputConverter" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
  <name>MobileNumberInputConverter</name>
  <description>Converts number inputs on mobile devices to show the numeric keypad.</description>

  <icon></icon>

  <properties>
        <property key="inputStyle" type="enumeration" required="true" defaultValue="keypad">
            <caption>Input Style</caption>
            <category>Behavior</category>
            <description>Which input method is targeted.</description>
            <enumerationValues>
                <enumerationValue key="keypad">Numeric Keypad</enumerationValue>
                <enumerationValue key="keyboard">Keyboard with Numbers</enumerationValue>
                <enumerationValue key="telephone">Telephone Keypad</enumerationValue>
            </enumerationValues>
        </property>
        <property key="inputClass" type="string" required="false" defaultValue="">
            <caption>Input Class</caption>
            <category>Behavior</category>
            <description>Restring the change to input with this class, otherwise applies to all numeric controls.</description>
        </property>
	</properties>
</widget>

